<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardElevation="30dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productair"
                android:layout_width="match_parent"
                android:layout_height="317dp"
                android:scaleType="fitCenter"
                android:src="@drawable/airpods1" />

            <TextView
                android:id="@+id/airpodsdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="boAt Immortal 131 with Beast Mode, 40 Hours Playback and ENx Tech Bluetooth Headset  (Black, True Wireless)"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_star_24"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_star_24"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_star_24"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_star_24"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_star_half_24"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/airpodsrank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 ranking"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"/>

            </LinearLayout>

            <TextView
                android:id="@+id/airpodsprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹1,699"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>